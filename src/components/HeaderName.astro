---
interface Props {
    name: string;
}

const { name } = Astro.props;
---

{
    name === 'kuchyne' ? (
        <h1    
            class="text-3xl tracking-wide md:text-5xl lg:mt-4 font-inria font-bold lg:tracking-[6px]"
            data-aos="fade-up"
            data-aos-delay={600}
            data-aos-duration="600"
            data-aos-easing="ease-in-sine"  
        >
            KUCHYNE
            <span class="block w-24 mt-3 ml-4 md:ml-10 lg:mt-5 md:w-32 lg:w-40 lg:ml-10 h-1 bg-red-600" />
        </h1>
    ) : name === 'steny-a-skrine' ? (
        <h1    
        class="text-lg sm:text-2xl md:text-3xl lg:text-5xl lg:mt-4 font-bold"
            data-aos="fade-up"
            data-aos-delay={600}
            data-aos-duration="600"
            data-aos-easing="ease-in-sine"  
        >
            VSTAVANÉ SKRINE A OBÝVACIE STENY
            <span class="block w-4/5 mt-3 ml-7 sm:ml-10 md:ml-12 lg:ml-20 lg:mt-5 h-1 bg-red-600" />
        </h1>
    ) : name === 'spalne' ? (
        <h1    
            class="text-3xl tracking-wide md:text-5xl lg:mt-4 font-bold lg:tracking-[6px]"
            data-aos="fade-up"
            data-aos-delay={600}
            data-aos-duration="600"
            data-aos-easing="ease-in-sine"  
        >
            SPÁLNE
            <span class="block w-20 mt-3 ml-3 md:ml-7 md:w-28 lg:mt-5 lg:w-32 lg:ml-8 h-1 bg-red-600" />
        </h1>
    ) : name === 'kupelne' ? (
        <h1    
            class="text-3xl tracking-wide md:text-5xl lg:mt-4 font-bold lg:tracking-[6px]"
            data-aos="fade-up"
            data-aos-delay={600}
            data-aos-duration="600"
            data-aos-easing="ease-in-sine"  
        >
            KÚPELNE
            <span class="block w-24 mt-3 ml-4 md:ml-10 lg:mt-5 md:w-32 lg:w-40 lg:ml-10 h-1 bg-red-600" />
        </h1>
    ) : name === 'kontakt' ? (
         <h1    
            class="text-3xl tracking-wide md:text-5xl lg:mt-4 font-bold lg:tracking-[6px]"
            data-aos="fade-up"
            data-aos-delay={600}
            data-aos-duration="600"
            data-aos-easing="ease-in-sine"  
        >
            KONTAKT
            <span class="block w-24 mt-3 ml-4 md:ml-10 lg:mt-5 md:w-32 lg:w-40 lg:ml-10 h-1 bg-red-600" />
        </h1 >
    ) : name === 'gdpr' ? (
        <h1    
            class="text-lg sm:text-2xl md:text-3xl lg:text-5xl lg:mt-4 font-bold"
            data-aos="fade-up"
            data-aos-delay={600}
            data-aos-duration="600"
            data-aos-easing="ease-in-sine"  
        >
            GDPR - OCHRANA OSOBNÝCH ÚDAJOV
            <span class="block w-4/5 mt-3 ml-7 sm:ml-10 md:ml-14 lg:ml-20 lg:mt-5 h-1 bg-red-600" />
        </h1 >
    ) : (
        <div>
        
        </div>
    )
}